<!DOCTYPE html>
<html>
<head>

  <title>Popstar</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<link href='https://fonts.googleapis.com/css?family=Dosis|Hind|Maven+Pro|Gudea:400,400italic,700' rel='stylesheet' type='text/css'>
</head>
<body>
  <div class="main_container">
    <% if current_page?(root_path) %>
        <%= render 'layouts/navbar' %>
        <% elsif current_page?(new_user_registration_path)  %>
        <%= render 'layouts/navbar' %>
        <% elsif current_page?(new_user_session_path)  %>
        <%= render 'layouts/navbar' %>

        <% else %>
        <%= render 'layouts/normalnav' %>
    <% end %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>

</div>
</body>
</html>
