    <div class="edit_buttons_themselves"><%= link_to 'Edit Your Store', edit_store_path(@store), {:class => "polina_buttonn", :style=>'text-align:center'}; %></div>


    <div class="edit_buttons_themselves"><%= link_to "Delete This Store", store_path(@store), method: :delete, data: {confirm: "Are you sure you  want to delete this store?"}, :class => "polina_buttonn" %></div>

