<h3> Headline: <%= @store.caption %> </h3>
<h2> Company Name: <%= @store.user.company_name %> </h2>
<p> Zipcode: <%= @store.zipcode %> </p>
<p> Long Description: <%= @store.long_description %> </p>




  <% if @store.user.id == current_user.id %>

  <button><%= link_to 'Edit Your Store', edit_store_path(@store) %></button>


  <button><%= link_to "Delete", store_path(@store), method: :delete, data: {confirm: "Are you sure you  want to delete this store?"}%></button>

  <% end %>

  <!-- Display Add Comment -->

    <div class="comment-form col-sm-11">
      <%= form_for [@store, @store.comments.new] do |f| %>
      <%= f.text_field :content, placeholder: 'Add'%>
      <%= f.submit 'Add'%>
    </div>
    <div>
        <% if @store.comments %>
          <% @store.comments.each do |comment| %>
        <!-- Display Actual Comment -->

         <div class="comment-content">
          <%= comment.content %>
          <% if comment.user == current_user %>
          <button><%= link_to "Delete This Comment",  store_comment_path(@store, comment), method: :delete, data: { confirm: "Are you sure?" } %></button>
          <% end %>
        </div>

    </div>
    <% end %>
    <% end %>

    <% end %>
