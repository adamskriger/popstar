  <!-- Add Comment Form Start -->
  <div class="comments_section">
    <h2>Add A Comment</h2>
      <div class="comment-form col-sm-11">
        <%= form_for [@store, @store.comments.new] do |f| %>
        <%= f.text_field :content, placeholder: 'Add Comment Here'%>
        <%= f.submit 'Add a Comment', :class => "Add"%>
      </div>
      <div class="comments_if">
          <% if @store.comments %>
            <% @store.comments.each do |comment| %>
          <!-- Display Actual Comment -->

            <div class="comment-content">
              <%= comment.content %>
            <% if comment.user == current_user %>
            <%= link_to "&#128465;",  store_comment_path(@store, comment), method: :delete, data: { confirm: "Are you sure?" } %>
          </div><br>
      </div>
      <% end %>
  </div>
