<div class="slider">
    <ul class="frames">
        <li id="one" class="slide">
          <%= image_tag(@store.image(:medium), class: "img-responsive") %>
            <nav>
                <a class="prev" href="#four">&larr;</a>
                <a class="next" href="#two">&rarr;</a>
            </nav>
        </li>
        <li id="two" class="slide">
          <%= image_tag(@store.image2(:medium), class: "img-responsive") %>
            <nav>
                <a class="prev" href="#one">&larr;</a>
                <a class="next" href="#three">&rarr;</a>
            </nav>
        </li>
        <li id="three" class="slide">
          <%= image_tag(@store.image3(:medium), class: "img-responsive") %>
            <nav>
                <a class="prev" href="#two">&larr;</a>
                <a class="next" href="#four">&rarr;</a>
            </nav>
        </li>
        <li id="four" class="slide">
          <%= image_tag(@store.image4(:medium), class: "img-responsive") %>
            <nav>
                <a class="prev" href="#three">&larr;</a>
                <a class="next" href="#one">&rarr;</a>
            </nav>
        </li>
        <li class="quicknav">
            <ul>
                <li><a href="#one"></a></li>
                <li><a href="#two"></a></li>
                <li><a href="#three"></a></li>
                <li><a href="#four"></a></li>
            </ul>
        </li>
    </ul>
</div>

<br>
