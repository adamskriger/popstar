<%= @store.caption%>
<h2> <%= @store.user.company_name %> </h2>

<%= image_tag(@store.image(:medium), class: "img-responsive") %>
<%= image_tag(@store.image2(:medium), class: "img-responsive") %>
<%= image_tag(@store.image3(:medium), class: "img-responsive") %>
<%= image_tag(@store.image4(:medium), class: "img-responsive") %>



<% if @store.user.id == current_user.id %>

  <button><%= link_to 'Edit Your Store', edit_store_path(@store) %></button>


  <button><%= link_to "Delete", store_path(@store), method: :delete, data: {confirm: "Are you sure you  want to delete this store?"}%></button>


  <% if @store.comments %>
    <% @store.comments.each do |comment| %>

  <div class="comment">
    <div class="user-name">
        <%= comment.user.company_name %>
    </div>
    <div class="comment-content">
      <%= comment.content %>
    </div>

<!-- Display Add Comment -->
<!-- Like start -->
  <div class="comment-like-form row">
      <div class="like-button col-sm-1">
        <span class="glyphicon glyphicon-heart-empty"></span>
      </div>
  </div>
<!-- Like ends -->


  <% end %>
  <% end %>
  <% end %>
  <div class="comment-form col-sm-11">
    <%= form_for [@store, @store.comments.new] do |f| %>
    <%= f.text_field :content, placeholder: 'Add'%>
    <%= f.submit 'Add'%>
  </div>
  <% end %>
